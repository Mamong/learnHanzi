/* pages/wordInfo/index.wxss */
page {
  font-size: 26rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  margin-left: 24rpx;
  margin-bottom: 12rpx;
  color: #aaa;
  font-size: 24rpx;
}

.section-content {
  padding: 12rpx 24rpx;
  background-color: white;
}

.flex {
  display: flex;
}

.stroke-order {
  width: 70rpx;
  height: 70rpx;
  margin-right: 12rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 46rpx;
  font-weight: 500;
}

.stroke-order.big {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  line-height: 160rpx;
  font-size: 110rpx;
}

.section-line{
  font-size: 26rpx;
  color: #666;
}

.section-grid {
  display: flex;
  flex-wrap: wrap;
}

.tone-item{
  display: flex;
  margin-bottom: 12rpx;
}

.tone{
  margin-right: 12rpx;
  font-size: 36rpx;
  font-weight: 500;
}

.params{
  color: #666;
}

.group:not(:last-child){
  margin-bottom: 12rpx;
}

.section-item {
  border: 2rpx solid #07c160;
  border-radius: 4rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  padding: 0 8rpx;
  color: #07c160;
  font-size: 30rpx;
}